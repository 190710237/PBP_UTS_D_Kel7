<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_mata_pelajaran"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F1F1FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <!-- Media -->
            <TextView
                android:id="@+id/txtCourseNumber"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_box_round_materials"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textAppearance="?attr/textAppearanceHeadline3"
                android:text="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtMataPelajaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Mata Pelajaran"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.chip.Chip
                        android:id="@+id/txtAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_baseline_person_outline_24"
                        android:fontFamily="@font/dm_sans_medium"
                        android:text="Author"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/txtTingkatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:chipIcon="@drawable/ic_baseline_layers_24"
                        android:fontFamily="@font/dm_sans_medium"
                        android:text="Beginner"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>